{
    "name": "aws-crt-python-staging",
    "targets": {
        "android": {
            "enabled": false,
            "_comment": "disabled until we have a reason to support python on android"
        },
        "linux": {
            "imports": [
                "libcrypto"
            ],
            "build_env": {
                "AWS_LIBCRYPTO_INSTALL": "{deps_dir}/libcrypto"
            }
        }
    },
    "hosts": {
        "manylinux": {
            "!build_steps": [
                "manylinux-ci"
            ]
        }
    },
    "build_steps": [
        "aws-crt-python"
    ],
    "upstream": [],
    "downstream": []
}
